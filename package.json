{
  "name": "nestjs-redlock-universal",
  "version": "0.2.0",
  "description": "NestJS integration for redlock-universal - Distributed Redis locks with decorators, modules, and dependency injection",
  "keywords": [
    "nestjs",
    "nest",
    "redlock",
    "redis",
    "lock",
    "distributed",
    "distributed-lock",
    "mutex",
    "semaphore",
    "decorator",
    "node-redis",
    "ioredis",
    "microservices",
    "concurrency",
    "synchronization",
    "typescript",
    "nest-module",
    "redlock-universal",
    "dependency-injection",
    "redis-lock"
  ],
  "author": "Alex Potapenko <alex.potapenko.dev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexpota/nestjs-redlock-universal.git"
  },
  "bugs": {
    "url": "https://github.com/alexpota/nestjs-redlock-universal/issues"
  },
  "homepage": "https://github.com/alexpota/nestjs-redlock-universal#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "docker:up": "docker compose up -d && sleep 3",
    "docker:down": "docker compose down -v",
    "test:e2e": "npm run docker:up && npm run test:integration && npm run docker:down",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test && npm run lint",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.0 || ^9.0.0 || ^10.0.0 || ^11.0.0",
    "@nestjs/core": "^8.0.0 || ^9.0.0 || ^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0"
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "ioredis": "^5.8.2",
    "lint-staged": "^16.2.6",
    "prettier": "^3.0.0",
    "redis": "^5.9.0",
    "reflect-metadata": "^0.1.13",
    "tsup": "^8.0.0",
    "typescript": "^5.2.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "redlock-universal": "^0.7.2"
  }
}
